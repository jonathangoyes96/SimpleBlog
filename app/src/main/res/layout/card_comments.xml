<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageProfileCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/profile_default_male"/>

    <android.support.v7.widget.CardView

        android:id="@+id/cardViewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/circleImageProfileCard"
        cardview:cardBackgroundColor="#f7f5f5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        cardview:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewUsernameCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="username"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textViewCommentCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewUsernameCard"
                android:text="@string/lorem"
                android:textSize="16sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>