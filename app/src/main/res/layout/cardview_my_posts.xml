<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageMyPost"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/main_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textViewTitleMyPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_post_text"
                android:textSize="17sp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textViewLikesMyPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Me gusta"
                android:textSize="14sp"
                android:textColor="@color/colorBlueImage"
                />



        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewEditMyPosts"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_edit"
            android:layout_gravity="center_vertical"
            />




    </LinearLayout>

</android.support.v7.widget.CardView>